{
  "name": "blog.takurinton.dev",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run prebuild && wmr",
    "build": "tsc && NODE_ENV=production && bun run prebuild && wmr build --prerender && bun run make-feed",
    "serve": "wmr serve",
    "lint": "eslint './**/*.{js,jsx,ts,tsx}'",
    "gen": "bun run ./scripts/gen-template.js",
    "prebuild": "bun run ./scripts/pre-build.js",
    "make-feed": "bun run ./scripts/make-feed.js"
  },
  "alias": {
    "react": "preact/compat"
  },
  "devDependencies": {
    "@types/node": "20.8.5",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.59.2",
    "eslint": "8.49.0",
    "eslint-config-preact": "1.3.0",
    "typescript": "5.1.3",
    "wmr": "3.8.0"
  },
  "dependencies": {
    "hoofd": "1.7.0",
    "marked": "7.0.2",
    "preact": "10.17.1",
    "preact-iso": "2.3.1"
  },
  "author": "takurinton",
  "eslintConfig": {
    "extends": "preact"
  }
}
